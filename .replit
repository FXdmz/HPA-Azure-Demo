run = "npm run dev"
entrypoint = "src/App.tsx"
modules = ["nodejs-20", "python-3.11"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
publicDir = "dist"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "PORT=5000 node server.js"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[agent]
expertMode = true

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Development"

[[workflows.workflow]]
name = "Development"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "bash -c \"python main.py & npm run dev\""
waitForPort = 5000

[userenv]

[userenv.shared]
AZURE_PROJECT_LABEL = "https://aescheraicanadaeast-resource.services.ai.azure.com/api/projects/aescheraicanadaeast"
